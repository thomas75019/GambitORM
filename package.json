{
  "name": "gambitorm",
  "version": "0.1.1",
  "description": "A modern, type-safe ORM for Node.js with full TypeScript support, migrations, relationships, validation, and hooks",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "gambit": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prepublishOnly": "npm run build && npm test",
    "version": "node scripts/version.js",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "orm",
    "database",
    "sql",
    "typescript",
    "nodejs",
    "query-builder",
    "mysql",
    "postgresql",
    "postgres",
    "sqlite",
    "migration",
    "validation",
    "relationships",
    "transactions",
    "hooks",
    "type-safe"
  ],
  "author": {
    "name": "Thomas Larousse",
    "url": "https://github.com/Thomas75019/GambitORM",
    "email": "tlarousse3@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/your-username/GambitORM/issues"
  },
  "homepage": "https://github.com/your-username/GambitORM#readme",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/commander": "^2.12.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.10.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.0"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "mysql2": "^3.6.0",
    "pg": "^8.11.0"
  },
  "optionalDependencies": {
    "better-sqlite3": "^9.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "repository": {
    "type": "git",
    "url": ""
